<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Class4_result_teacher_site"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background2">
    <Button
        android:id="@+id/editData4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:text="Add Results"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="class 4 results"
        android:textColor="@android:color/background_dark"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:id="@+id/t8"
        android:textStyle="bold"
        android:layout_below="@+id/editData4"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/t8">
        <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/rv_student_view4"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>